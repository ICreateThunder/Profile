---
import BaseLayout from "../layouts/BaseLayout.astro";
import Head from "../components/Head.astro";
---

<BaseLayout>
  <Head
    title="Robert Shalders - Technologist"
    description="Robert is a seasoned technologist, with experience in low-level high-performance software development (C/C++) to highly-available robust cloud architectures."
  />
  <main class="h-svh min-h-[768px] p-12 relative overflow-hidden">
    <div class="flex flex-col-reverse lg:flex-row h-full w-full border-4 justify-between">
      <div class="flex flex-col animate-fade-in p-8 justify-end lg:h-full lg:justify-between">
        <div class="hidden lg:flex flex-col select-none">
          <span
            class="text-3xl lg:text-6xl font-thin motion-safe:animate-slide-down hero-text"
            >Status</span
          >
          <span
            class="text-3xl lg:text-6xl font-extralight motion-safe:animate-slide-down hero-text"
            >Status</span
          >
          <span
            class="text-3xl lg:text-6xl font-normal motion-safe:animate-slide-down hero-text"
            >Status</span
          >
          <span
            class="text-3xl lg:text-6xl font-bold motion-safe:animate-slide-down hero-text"
            >Status</span
          >
          <span
            class="text-3xl lg:text-6xl font-black motion-safe:animate-slide-down hero-text"
            >Status</span
          >
          <span
            class="border-teal-400 border-4 my-6 p-2 pt-1.5 text-3xl font-black animate-fade-in delay-[1200ms]"
            >Available<br />for Hire</span
          >
        </div>
        <div class="flex flex-col space-y-2">
          <a
            href="/profile"
            class="text-2xl text-indigo-400 cursor-pointer hover:bg-teal-400 hover:text-white align-middle"
            >Profile</a
          >
          <a
            href="/blog"
            class="text-2xl text-indigo-400 cursor-pointer hover:bg-teal-400 hover:text-white align-middle"
            >Articles</a
          >
          <a
            href="/contact"
            class="text-2xl text-indigo-400 cursor-pointer hover:bg-teal-400 hover:text-white"
            >Contact</a
          >
          <span class="text-slate-600 text-xs select-none"
            >Â© Robert Shalders, 2025</span
          >
        </div>
      </div>
      <div class="flex flex-col h-full gap-y-8 j justify-center items-center w-full p-8 lg:p-0">
        <div class="flex flex-col justify-center items-center gap-y-4">
          <p>
            <span class="text-3xl font-light"
              >Hi, I'm
              <span class="font-bold text-indigo-400">Robert Shalders</span
              >.</span
            >
          </p>
          <p>Technologist & Software Engineer</p>
        </div>
        <div class="flex lg:gap-8 lg:py-12">
          <a
            class="p-2"
            href="https://github.com/ICreateThunder"
            target="_blank"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              fill="currentColor"
              class="bi bi-github"
              viewBox="0 0 16 16"
            >
              <path
                d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8"
              ></path>
            </svg>
          </a>
          <a
            class="p-2"
            href="https://www.linkedin.com/in/robertshalders/"
            target="_blank"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="32"
              height="32"
              fill="currentColor"
              class="bi bi-linkedin"
              viewBox="0 0 16 16"
            >
              <path
                d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
    <div class="absolute animated-background -z-10 animate-shift inset-[-100%]">
    </div>
  </main>
</BaseLayout>
